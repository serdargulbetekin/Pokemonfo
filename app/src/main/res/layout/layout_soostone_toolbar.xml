<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="?attr/colorPrimary"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="@dimen/margin_medium"
        android:contentDescription="@string/image_view_back"
        android:src="@drawable/icon_back"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageViewMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/image_view_menu"
        android:src="@drawable/icon_toggle"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:paddingStart="@dimen/text_xlarge"
        android:paddingEnd="@dimen/padding_xlarge"
        android:fontFamily="sans-serif-medium"
        android:gravity="start|center"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="TOOLBAR" />
</LinearLayout>